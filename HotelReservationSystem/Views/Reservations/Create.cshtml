@model HotelReservationSystem.Models.Reservation

@{
    ViewData["Title"] = "Create Reservation";
}

<h1>Create Reservation</h1>

<h4>Reservation Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RoomId" class="control-label">Select Room</label>
                <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId">
                    <option value="">-- Select Room --</option>
                </select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>

            @* admin / regular user logic *@
            @if (User.IsInRole("Admin"))
            {
                <div class="form-group mb-3">
                    <label asp-for="GuestId" class="control-label">Assign to Guest (Admin Only)</label>
                    <select asp-for="GuestId" class="form-control" asp-items="ViewBag.GuestId"></select>
                    <span asp-validation-for="GuestId" class="text-danger"></span>
                </div>
            }
            else
            {
                @* hidden - it'll be set in controller *@
                <input type="hidden" asp-for="GuestId" value="@ViewBag.CurrentGuestId" />
            }

            <div class="form-group">
                <input type="submit" value="Confirm Booking" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to My Reservations</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}